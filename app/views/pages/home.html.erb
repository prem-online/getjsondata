<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Getjsondata</title>
  </head>
  <body>
    <div class="container">
      <div class="mb-3">
          <select class="form-select" id="data-class">
            <% @data.each do |fake_data, index|%>
              <option value="<%= index%>"><%= fake_data %></option>
            <% end %>
          </select>
      </div>
   
      <div class="input-group mb-3">
        <button class="btn btn-dark" type="button" id="data-submit">Submit</button>
        <input type="text" class="form-control" placeholder="10" id="data-quantity">
      </div>
    </div>
    
    <br>
    <div class="container text-center" style="overflow:auto;">
        <div class="card" style= "height:700px;overflow:auto;">
            <div class="card-body" id="data-content">

            </div>
        </div>
    <div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </body>
</html>
